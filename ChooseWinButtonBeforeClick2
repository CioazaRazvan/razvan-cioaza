<!DOCTYPE html>
<html>
    <body onload="Choose()">
        <h1></h1>
          <button type="button" id="btn1" onclick="Click(this.id)">buton</button>
        <h2></h2>
          <button type="button" id="btn2" onclick="Click(this.id)">buton</button>
        <h3></h3>
          <button type="button" id="btn3" onclick="Click(this.id)">buton</button>
        <script>
          let id_button = "";

          function Choose() {
              let WinButton = Math.floor(Math.random() * 3);
              if (WinButton == 0) {
                  alert("Primul buton este castigator");
                  id_button = "btn1";
              } else if (WinButton == 1) {
                  alert("Al doilea buton este castigator");
                  id_button = "btn2";
              } else {
                  alert("Al treilea buton este castigator");
                  id_button = "btn3";
              }
          }

          function Click(clicked_id) {
              if (id_button === clicked_id) {
                  alert("A fost apasat butonul castigator");
              } else {
                  alert("Nu a fost apasat butonul castigator");
              }
          }
        </script>
    </body>
</html>
