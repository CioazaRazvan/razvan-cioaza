function sampleClick() {
  let b1=0;
  let b2=1;
  let b3=2;
  let random=Math.floor(Math.random() * 3);
  if(random==b1)
  alert("A fost apasat butonul castigator");
  else
  alert("Nu a fost apasat butonul castigator");
}
